<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="log.path" value="D:/logs"/>
    <property name="log.pattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{100} - %msg%n"/>

    <!-- 控制台输出 -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${log.pattern}</pattern>
            <charset>utf-8</charset>
        </encoder>
    </appender>

    <!-- 文件输出 -->
    <appender name="file_info" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.path}/spring-boot-sys-info.log</file>
        <!-- 滚动策略：固定窗口 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${log.path}/spring-boot-sys-info.%i.log</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>10</maxIndex>
        </rollingPolicy>

        <!-- 触发策略：按文件大小（maxFileSize 配置在这里） -->
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>100MB</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- 关键：必须是DEBUG，且不要有其他额外过滤规则 -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
    </appender>

    <appender name="file_error" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.path}/spring-boot-sys-error.log</file>
        <!-- 循环政策：基于时间创建日志文件 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 日志文件名格式 -->
            <fileNamePattern>${log.path}/spring-boot-sys-error.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- 日志最大的历史 60天 -->
            <maxHistory>60</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${log.pattern}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <!-- 过滤的级别 -->
            <level>ERROR</level>
            <!-- 匹配时的操作：接收（记录） -->
            <onMatch>ACCEPT</onMatch>
            <!-- 不匹配时的操作：拒绝（不记录） -->
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <!-- Spring日志级别控制  -->
    <logger name="org.springframework" level="info">
        <appender-ref ref="console"/>
        <appender-ref ref="file_info"/>
    </logger>

    <logger name="org.hibernate.validator" level="INFO">
        <appender-ref ref="console"/>
        <appender-ref ref="file_info"/>
    </logger>

    <!-- 4. 终极关键：全覆盖MyBatis相关包，确保SQL日志被捕获 -->
    <!-- 4.1 原生MyBatis 核心执行器（负责打印Preparing/Parameters，必配） -->
    <logger name="org.apache.ibatis.executor" level="DEBUG" additivity="false">
        <appender-ref ref="console" />
        <appender-ref ref="file_info" />
    </logger>

    <!-- 4.2 原生MyBatis 会话（兜底，捕获SqlSession相关日志） -->
    <logger name="org.apache.ibatis.session" level="DEBUG" additivity="false">
        <appender-ref ref="console" />
        <appender-ref ref="file_info" />
    </logger>

    <!-- 4.3 MyBatis-Plus （如果项目用了MP，必配，否则删除） -->
    <logger name="com.baomidou.mybatisplus" level="DEBUG" additivity="false">
        <appender-ref ref="console" />
        <appender-ref ref="file_info" />
    </logger>

    <!-- 4.4 通用Mapper tk.mybatis （如果项目用了通用Mapper，必配，否则删除） -->
    <logger name="tk.mybatis" level="DEBUG" additivity="false">
        <appender-ref ref="console" />
        <appender-ref ref="file_info" />
    </logger>

    <!-- 4.5 你的Mapper接口包（精准匹配，务必替换为实际包名！！！） -->
    <!-- 示例：如果你的Mapper在 com.zengyanyu.system.mapper 下，就填这个，不要填错 -->
    <logger name="com.zengyanyu.system.mapper" level="DEBUG" additivity="false">
        <appender-ref ref="console" />
        <appender-ref ref="file_info" />
    </logger>

    <!-- 4.6 其他组件（保持INFO，不影响SQL日志） -->
    <logger name="com.alibaba" level="INFO">
        <appender-ref ref="console"/>
        <appender-ref ref="file_info"/>
    </logger>

    <!--系统操作日志-->
    <!-- 5. 根日志（兜底：捕获所有未单独配置的日志，确保无遗漏） -->
    <root level="info">
        <appender-ref ref="console"/>
        <appender-ref ref="file_info"/>
        <appender-ref ref="file_error"/>
    </root>

</configuration>
